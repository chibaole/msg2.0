
.text-footer {
  text-align: center;
  font-size: 24rpx;
  margin-bottom: 10rpx;
}
.text-primary {
  color: #EA5149;
}
.page-title {
  padding-left: 40rpx;
  background: #eee;
  line-height: 80rpx;
  font-size: 28rpx;
}
.right {
  float: right;
}
.btn {
  color: white;
  background: #EA5A49;
  margin-bottom: 20rpx;
  padding-left: 30rpx;
  border-radius: 4rpx;
  font-size: 32rpx;
  line-height: 80rpx;
  height: 80rpx;
  width: 100%;
}
.btn:active {
  background: #FA5A49;
}
._form {
  border: none;
  display: block;
  padding: 0;
  margin: 0;
  border-radius: 0;
}
._form ._button {
  display: block;
  background: none;
  border: none;
  padding: 0;
  margin: 0;
}
._form ._button::after {
  border-radius: 0;
  border: none;
}
._button::after {
  border-radius: 0;
  border: none;
  padding: 0;
  margin: 0;
}
.bg {
  border-radius: 10rpx;
}